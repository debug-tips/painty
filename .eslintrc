{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "browser": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "no-var": "off",
    "vars-on-top": "off",
    "func-names": "off",
    "prefer-arrow-callback": "off",
    "space-before-function-paren": "off",
    "no-param-reassign": "warn",
    "prefer-destructuring": "off",
    "no-restricted-properties": "warn",
    "object-shorthand": "off",
    "no-use-before-define": "off",
    "arrow-parens": "off"
  }
}
